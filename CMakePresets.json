{
    "version": 6,
    "configurePresets": [
        {
            "name": "debug",
            "displayName": "Debug",
            "description": "Debug build with tests and coverage enabled.",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_CXX_FLAGS": "-Wall -Wpedantic -std=c++20",
                "IO_BUILD_TESTING": "ON",
                "IO_ENABLE_DOCS": "ON"
            }
        },
        {
            "name": "release",
            "displayName": "Release",
            "description": "Optimized release build.",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_FLAGS": "-Wall -Wpedantic -DNDEBUG -std=c++20",
                "IO_BUILD_TESTING": "OFF",
                "IO_BUILD_EXAMPLES": "OFF",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "OFF"
            }
        },
        {
            "name": "benchmark",
            "displayName": "Benchmark",
            "description": "High-performance build optimized for benchmarking with aggressive optimizations.",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/benchmark",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_FLAGS": "-Wall -Wpedantic -O3 -DNDEBUG -std=c++20 -march=native -mtune=native -flto",
                "CMAKE_EXE_LINKER_FLAGS": "-flto",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "IO_BUILD_TESTING": "OFF",
                "IO_ENABLE_BENCHMARKS": "ON",
                "BENCHMARK_ENABLE_LTO": "ON",
                "BENCHMARK_DOWNLOAD_DEPENDENCIES": "ON",
                "BENCHMARK_ENABLE_TESTING": "OFF",
                "IO_BUILD_EXAMPLES": "OFF",
                "STDEXEC_BUILD_EXAMPLES": "OFF",
                "STDEXEC_BUILD_TESTS": "OFF"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "description": "debug build with tests",
            "displayName": "Debug",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "description": "optimized release build",
            "displayName": "Release",
            "configurePreset": "release"
        },
        {
            "name": "benchmark",
            "description": "high-performance build for benchmarking",
            "displayName": "Benchmark",
            "configurePreset": "benchmark"
        }
    ],
    "testPresets": [
        {
            "name": "debug",
            "description": "tests",
            "displayName": "Debug",
            "configurePreset": "debug"
        },
        {
            "name": "benchmark",
            "description": "benchmark tests",
            "displayName": "Benchmark",
            "configurePreset": "benchmark"
        }
    ],
    "packagePresets": [
        {
            "name": "release",
            "description": "Binary release package",
            "displayName": "Release",
            "configurePreset": "release"
        }
    ]
}
