{
    "version": 3,
    "configurePresets": [
        {
            "name": "debug",
            "displayName": "Debug",
            "description": "Debug build with tests and coverage enabled.",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "CMAKE_CXX_FLAGS": "-Wall -Wpedantic -std=c++20",
                "IOSCHED_ENABLE_TESTS": true,
                "IOSCHED_ENABLE_COVERAGE": true,
                "IOSCHED_ENABLE_DOCS": true,
                "STDEXEC_BUILD_EXAMPLES": false
            }
        },
        {
            "name": "release",
            "displayName": "Release",
            "description": "Optimized release build.",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_FLAGS": "-Wall -Wpedantic -DNDEBUG -std=c++20",
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "STDEXEC_BUILD_EXAMPLES": false
            }
        },
        {
            "name": "benchmark",
            "displayName": "Benchmark",
            "description": "High-performance build optimized for benchmarking with aggressive optimizations.",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/benchmark",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_FLAGS": "-Wall -Wpedantic -O3 -DNDEBUG -std=c++20 -march=native -mtune=native -flto -fno-strict-aliasing",
                "CMAKE_EXE_LINKER_FLAGS": "-flto",
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "IOSCHED_ENABLE_TESTS": "ON",
                "STDEXEC_BUILD_EXAMPLES": false
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "description": "debug build with tests",
            "displayName": "Debug",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "description": "optimized release build",
            "displayName": "Release",
            "configurePreset": "release"
        },
        {
            "name": "benchmark",
            "description": "high-performance build for benchmarking",
            "displayName": "Benchmark",
            "configurePreset": "benchmark"
        }
    ],
    "testPresets": [
        {
            "name": "debug",
            "description": "tests",
            "displayName": "Debug",
            "configurePreset": "debug"
        },
        {
            "name": "benchmark",
            "description": "benchmark tests",
            "displayName": "Benchmark",
            "configurePreset": "benchmark"
        }
    ]
}
